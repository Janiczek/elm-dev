{
  "name": "elm-watchtower",
  "version": "1.0.0",
  "description": "Elm editor tooling based on the Elm compiler!",
  "main": "index.js",
  "repository": "https://github.com/mdgriffith/elm-watchtower-compiler.git",
  "author": "Matthew Griffith <mdg.griffith@gmail.com>",
  "license": "BSD 3",
  "private": true,
  "scripts": {
    "vscode": "yarn --cwd watchtower-frontends/vscode",
    "watchtower": "stack ghci",
    "install:system": "stack install",
    "install:vscode": "stack --local-bin-path ./watchtower-frontends/vscode/out install",
    "prepare:vscode": "yarn install:vscode ; (cd watchtower-frontends/vscode ; yarn package)",
    "build": "stack build"
  }
}
