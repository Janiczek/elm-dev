{
  "name": "elm-dev",
  "version": "0.1.0",
  "description": "Elm tools to support development",
  "main": "index.js",
  "repository": "https://github.com/mdgriffith/elm-dev.git",
  "author": "Matthew Griffith <mdg.griffith@gmail.com>",
  "license": "BSD 3",
  "private": true,
  "scripts": {
    "vscode": "yarn --cwd watchtower-frontends/vscode",
    "watchtower": "stack ghci",
    "install:system": "stack install",
    "install:vscode": "stack --local-bin-path ./watchtower-frontends/vscode/out install",
    "prepare:vscode": "yarn install:vscode ; (cd watchtower-frontends/vscode ; yarn package)",
    "build": "stack build",
    "stack:run": "stack run --",
    "test:docs": "stack run --cwd watchtower-frontends/vscode/testProject -- docs",
    "test:docs:help": "stack run --cwd watchtower-frontends/vscode/testProject -- docs --help",
    "test:docs:file": "stack run --cwd watchtower-frontends/vscode/testProject -- docs src/Main.elm src/Imported.elm",
    "test:docs:module": "stack run --cwd watchtower-frontends/vscode/testProject -- docs Main Imported Alias",
    "test:docs:package": "stack run --cwd watchtower-frontends/vscode/testProject -- docs mdgriffith/elm-ui --output=docs.json",
    "test:warnings": "stack run --cwd watchtower-frontends/vscode/testProject -- warnings src/Main.elm --output=warnings.json ",
    "test:entrypoints": "stack run --cwd watchtower-frontends/vscode/testProject -- entrypoints",
    "test:imports": "stack run --cwd watchtower-frontends/vscode/testProject -- imports Main, AlternativeMain  --output=out.json",
    "test:usage": "stack run --cwd watchtower-frontends/vscode/testProject -- usage Imported --output=out.json",
    "test:usage:type": "stack run --cwd watchtower-frontends/vscode/testProject -- usage type Imported.MyType --output=out.json",
    "test:explain": "stack run --cwd watchtower-frontends/vscode/testProject -- explain Main.Regions --output=out.json",
    "test:callgraph": "stack run --cwd watchtower-frontends/vscode/testProject -- callgraph Main --output=out.json"
  }
}
