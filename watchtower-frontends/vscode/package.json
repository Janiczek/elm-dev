{
  "name": "elm-watchtower-vscode",
  "displayName": "Elm Watchtower",
  "description": "An Elm extension for handling large Elm codebases",
  "version": "0.0.1",
  "publisher": "mgriffith",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:elm",
    "onCommand:elm.liveErrorView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "elm.liveErrorView",
        "title": "Elm Live Errors"
      }
    ],
    "languages": [
      {
        "id": "elm",
        "aliases": [
          "Elm",
          "elm"
        ],
        "extensions": [
          ".elm"
        ],
        "configuration": "./elm.configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.elm.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.elm": "elm",
          "meta.embedded.block.glsl": "glsl"
        }
      },
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./syntaxes/elm.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Elm configuration",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "tsc -p ./ & cp ../../node_modules/elm-format/unpacked_bin/elm-format ./out/elm-format",
    "watch": "tsc -watch -p ./",
    "preview": "elm-live elmSrc/Main.elm --dir=media --open --start-page=elmExternalView.html -- --output=media/elmViewer.js",
    "test": "yarn run build && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/node": "^11.12.21",
    "eslint": "^7.21.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "websocket": "^1.0.31",
    "which": "^1.3.1",
    "elm-format": "0.8.5"
  }
}
